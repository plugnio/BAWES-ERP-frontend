{
  "workflow": {
    "start_sequence": [
      {
        "action": "read_knowledge",
        "paths": [
          "cursor/knowledge/domain/*.md",
          "cursor/knowledge/core/*.md"
        ]
      },
      {
        "action": "check_implementation",
        "tools": ["codebase_search", "grep_search"]
      },
      {
        "action": "understand_tests",
        "paths": ["e2e/tests/", "src/**/*.spec.ts"]
      }
    ],
    "change_sequence": [
      {
        "action": "write_test",
        "validate": "test_must_fail"
      },
      {
        "action": "implement",
        "validate": "test_must_pass"
      },
      {
        "action": "validate",
        "steps": [
          "wait_linting",
          "check_errors",
          "fix_issues"
        ]
      }
    ]
  },
  "validation": {
    "required_checks": [
      {
        "type": "doc_check",
        "paths": ["cursor/knowledge/*"]
      },
      {
        "type": "test_preservation",
        "patterns": ["*.spec.ts"]
      },
      {
        "type": "tdd_process",
        "sequence": ["write_test", "implement", "verify"]
      },
      {
        "type": "linting",
        "wait_time": 5000
      }
    ],
    "auto_fixes": {
      "linting": true,
      "imports": true,
      "test_structure": true
    }
  },
  "tools": {
    "search": {
      "semantic_first": true,
      "exact_fallback": true
    },
    "file": {
      "require_complete_context": true,
      "preserve_tests": true
    },
    "terminal": {
      "add_cat_to_pagers": true,
      "background_long_running": true
    }
  },
  "debug": {
    "paths": {
      "log": "e2e/debug-output/debug.json",
      "validation": "cursor/tools/validation"
    },
    "requirements": {
      "check_after_tests": true,
      "verify_api_calls": true,
      "monitor_performance": true
    }
  }
} 